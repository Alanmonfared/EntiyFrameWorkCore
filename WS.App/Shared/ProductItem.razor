



    <div class="container">
      
        
        <div class=" mb-5">
            <div class="card shadow if-card">

                <div class="card-body ">

                    <div class="bg-image hover-overlay d-flex justify-content-center align-content-center mb-5 mt-3  " data-mdb-ripple-color="light">
                        <img src="@Items.Img" class="img-fluid" />

                    </div>


                    <h4 class="card-title mb-4 border-bottom te">@Items.Name</h4>
                        





                                    
                    <h5 class="card-text">@Items.ShortDescription</h5>


                    <p class="card-text">@Items.LongDescription.Substring(0,  Math.Min (25, Items.LongDescription.Length)).... </p>


                    <div class="d-flex justify-content-between align-items-center mt-5 ">
                        <i class="">In stock: @Items.InStock</i>
                        <span class="text-red ">@Items.Price.ToString() SEK</span>
                    </div>

                   

                    <div class="d-flex justify-content-center align-content-center ">
                        <NavLink href="@Href" type="button" class="btn btn-dark hov btn-lg mt-5 col-10 ">Read More</NavLink>
                    </div>

                </div>
            </div>
     
        



    </div>

</div>




@code {
    [Parameter]
    public Product Items { get; set; }
    public string Href { get; set; }

    protected override void OnInitialized()
    {
        Href = "product/" + Items.Id.ToString();
    }

}
